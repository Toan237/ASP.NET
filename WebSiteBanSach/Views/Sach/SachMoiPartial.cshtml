
@using WebSiteBanSach.Models;
@*Định nghĩa kiểu dữ liệu cho biến Model*@
@model List<Sach>

<h1 class="item-header">Sách mới</h1>
@{
    foreach (var item in Model)
    {
<div class="activity-list-update">
    <img src="@Url.Content("~/HinhAnhSach/"+item.AnhBia)" width="50" height="30" alt="Image">
    @if (item.TenSach.Length > 30)
    {
        <p><strong>Tiêu đề:@item.TenSach.Substring(0,30)...</strong><br /><a href="@Url.Action("XemChiTiet", new { @masach=item.MaSach})">Xem chi tiết</a></p>
    }
    else
    {
        <p><strong>Tiêu đề:@item.TenSach</strong><br /><a href="@Url.Action("XemChiTiet", new { @masach=item.MaSach})">Xem chi tiết</a></p>
        <div class="clear"></div>
    }

</div>
    }
}





<a href="#" class="item-footer green">
    Sách loại mới nhất
</a>
@using WebSiteBanSach.Models;
@model List<ChuDe>
@{
    ViewBag.Title = "DanhMucChuDe";
    Layout = "~/Views/Layout/NguoiDungLayout.cshtml";
}

@*Hiển thị danh mục chủ đề*@
<div class="ChuDe">
    @foreach (var item in Model)
    {
        <a style="width:280px; font-size:11pt;" href="@Url.Action("SachTheoChuDe",new { @MaChuDe=item.MaChuDe})" class="button">@item.TenChuDe</a>
        <br />
        <br />
    }
</div>
<style>
    .ChuDe{
        margin-left:160px;
    }
</style>